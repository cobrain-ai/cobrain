{
  "name": "cobrain",
  "version": "0.1.0",
  "private": true,
  "description": "CoBrain - Your AI thinking partner. Open-source second brain with local AI.",
  "keywords": [
    "second-brain",
    "ai",
    "note-taking",
    "knowledge-management",
    "local-ai",
    "privacy-first"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/cobrain-ai/cobrain"
  },
  "license": "AGPL-3.0",
  "author": "CoBrain Team",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "build:desktop": "STATIC_EXPORT=true pnpm --filter web build && cp -r apps/web/out apps/desktop/dist && pnpm --filter desktop build",
    "build:android": "cd apps/mobile && npx expo prebuild --platform android && cd android && ./gradlew assembleRelease",
    "release": "echo 'Push a tag (git tag v0.1.0 && git push origin v0.1.0) to trigger GitHub Actions release'"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitest/coverage-v8": "^1.2.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.4",
    "turbo": "^1.11.3",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.1",
  "pnpm": {
    "overrides": {
      "@types/react": "19.1.6",
      "@types/react-dom": "19.1.6"
    }
  }
}
